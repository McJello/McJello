
<div class="panel panel-default" data-id="<%= task.id %>">
  <div class="panel-heading">
    <h3 class="panel-title"><%= truncate task.title, length: 41 %></h3>
  </div>
  <div class="panel-body">
    <%= truncate task.description, length: 50 %>
  </br>Due on: <%= task.due_on %>
  </div>
  <% @task=task %>
  <%= form_for @task do |f| %>
    <div class="field">
      <%= f.label "Completed?" %> <br />
      <%= f.check_box :complete %> <br />
    </div>
  <% end %>
</div>
